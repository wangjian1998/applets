/* baseui/nav-bar/index.wxss */
.nav {
  height: 44px;
  display: flex;
  align-items: center;
  text-align: center;
  color: #fff;
}

.left, .right{
  width: 120rpx;
}
.center {
  flex: 1
}

.left-slot:empty + .left-arrow {
  display: block;
}

.left-arrow {
  width: 100%;
  display: none;
}
.icon {
  width: 44rpx;
}

.center-slot:empty + .center-title{
  display: block;
}

.center-title {
  display: none;
}
