/* components/video-item-v2/index.wxss */
.item-content {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.album {
  width: 40%;
  position: relative;
  margin-right: 20px;
  margin-bottom: 10px;
}

.album-image {
  width: 100%;
}

.durationms {
  position: absolute;
  right: 5px;
  bottom: 5px;
  color: #fff;
  font-size: 12px;
}

.playMV {
  width: 15px;
  display: inline-block;
  vertical-align: bottom;
  margin-right: 4px;
}

.relate-info {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-title {
  font-size: 14px;
  font-weight: bold;
}

.info-author {
  font-size: 12px;
  color: rgb(116, 113, 113);
}