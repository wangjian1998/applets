/* pages/music-player/index.wxss */

.bg-image, .bg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(20px);
}

/** 自定义导航样式*/

.center-slot{
  display: flex;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
}
.center-slot .divider{
  margin: 0 10rpx;
}
.center-slot .active {
  color: #fff;
}


