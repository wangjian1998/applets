/* pages/home-music/index.wxss */
page {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.van-search__content {
  background-color: #fff !important;
}

.van-search {
  padding: 10px 0 !important;
}

.home-swiper {
  width: 100%;
  margin: auto;
}
.swiper-item {
  width: 100%;
  display: flex;
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);
}

.swiper-image {
  width: 100%;
}

.commond-music {
  width: 100%;
  margin-top: 20rpx;
}

.recommond-wrapper {
  width: 100%;
  position: relative;
  display:flex;
  justify-content: flex-start;
  margin-bottom: 15px;
}

.recommondImage {
  width:15%;
  margin-right: 10px;
  border-radius: 10px;
}
.recommond-info {
  width: 70%;
  display:flex;
  flex-direction: column;
  justify-content: center;
}

.recommond-name{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.recommond-album-name {
  font-size: 12px;
  color: rgb(116, 113, 113);
}

.iconImage{
 position: absolute;
 right: 10px;
 top: 0;
 bottom: 0;
 margin: auto;
 width: 15px;
}